@model PostModel 
@{ 
    ViewData["Title"] = Model.Name;
    ViewData["Description"] = Model.Description;
}
<!-- Header -->
<div class="box">
    <div class="brums">
        <img src="@ViewBag.UrlImage" alt="Hình bài viết">
    </div>
</div>

<!-- Main slider -->
<div class="box mb45">
    <div class="blog-detail">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="content-wrap">
                        <h3 class="title">@Model.Name</h3>
                        @Html.Raw(Model.Content)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>