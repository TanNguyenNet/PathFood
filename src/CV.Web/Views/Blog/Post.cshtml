@model PostModel 
@{ 
    ViewData["Title"] = Model.Name;
    ViewData["Description"] = Model.Description;
}
<!-- Header -->
<div class="box">
    <div class="brums">
        <img src="@ViewBag.UrlImage" alt="Hình bài viết">
    </div>
</div>

<!-- Main slider -->
<div class="box mb45">
    <div class="blog-detail">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="hot-news">
                        <div class="col-md-8">
                            <div class="content">
                                <a href="#"><img src="/UploadFiles/Make-your-Jams-and-Jellies-Appealing-with-our-Natural-Color-Ecocol.jpg" alt="T&#x1EF7; l&#x1EC7; v&#xE0;ng c&#x1EE7;a ch&#x1EA5;t b&#xE9;o"></a>
                                <div class="info-content">
                                    <h3 class="title"><a href="#">VN phát hiện màng bọc thực phẩm nhiễm chất độc</a></h3>
                                    <div class="readmore">
                                        <a href="/tintuc/ty-le-vang-cua-chat-beo-14102019"><span class="icon icon-calendar"></span>12/02/2019</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="content-wrap">
                        <h3 class="title">@Model.Name</h3>
                        @Html.Raw(Model.Content)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>