@model IEnumerable<InfoModel>


<div class="consultant">
    <div id="caroseul" class="swiper-container swiper3 person">
        <div class="swiper-wrapper">
            @foreach (var item in Model)
            {
                <div class="swiper-slide">
                    <img src="~/client/images/customer-service.svg" alt="">
                    <div class="contact-person">
                        <span class="name">@item.Name</span>
                        <a class="chat" href='http://zalo.me/@item.Phone'><span><i class="icon icon-bubbles2"></i>zalo chat</span></a>
                        <a class="phone" href='tel:@item.Phone'><span><i class="icon icon-phone"></i>@item.Phone</span></a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- online chat -->
<div class="mb-online">
    <div class="mbonline-wrapper">
        <div class="hotline">
            <div class="icon-class"><img src="~/client/images/old-typical-phone.png" alt="phone icon"></div>
            <div class="detail-hotline">
                <span>Số tổng đài</span>
                <a href='tel:0909109786'><span>0909109786</span></a>
            </div>
        </div>
        <div class="con-person">
            <div id="caroseul" class="swiper-container swiper3 person">
                <div class="swiper-wrapper">
                    @foreach (var item in Model)
                    {
                        <div class="swiper-slide">
                            <img src="~/client/images/customer-service.svg" alt="customer service">
                            <div class="contact-person">
                                <span class="name">@item.Name</span>
                                <a class="chat" href='http://zalo.me/@item.Phone'><span><i class="icon icon-bubbles2"></i>zalo chat</span></a>
                                <a class="phone" href='tel:@item.Phone'><span><i class="icon icon-phone"></i>@item.Phone</span></a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>