@model PagePostModel

@{
    ViewData["Title"] = "Tin tức - Path";
    ViewData["Description"] = "Tin tức mới nhất từ Path";
}
<!-- Header -->
<div class="box">
    <div class="brums">
        <img src="@ViewBag.URLImage" alt="Hình bài viết">
    </div>
</div>

<!-- Main slider -->
<div class="box mb45">
    @{
        await Html.RenderPartialAsync("~/Views/Blog/_Index/_Mix.cshtml").ConfigureAwait(true);

        await Html.RenderPartialAsync("~/Views/Blog/_Index/_Category.cshtml").ConfigureAwait(true);
    }
</div>

@await Component.InvokeAsync("EnLogo")