<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">CMS</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">User</a></li>
                            <li class="breadcrumb-item active">Change password</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Change password</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->


        <div class="row">
            <div class="col-lg-6">
                <div class="card-box">
                    <h5 class="text-uppercase bg-light p-2 mt-0 mb-3">Đổi mật khẩu</h5>

                    <div class="form-group mb-3">
                        <label for="password">
                            Password <span v-if="!$v.objModel.oldPassword.required" class="text-danger">* Nhập password</span>
                            <span v-if="!$v.objModel.oldPassword.minLength" class="text-danger">* Lớn hơn 5 ký tự</span>
                        </label>
                        <input type="password" id="oldPassword" name="oldPassword" class="form-control" v-model="$v.objModel.oldPassword.$model" placeholder="mật khẩu cũ">
                    </div>

                    <div class="form-group mb-3">
                        <label for="password">
                            Password <span v-if="!$v.objModel.newPassword.required" class="text-danger">* Nhập password</span>
                            <span v-if="!$v.objModel.newPassword.minLength" class="text-danger">* Lớn hơn 5 ký tự</span>
                        </label>
                        <input type="password" id="newPassword" name="newPassword" class="form-control" v-model="$v.objModel.newPassword.$model" placeholder="mật khẩu mới">
                    </div>

                </div> <!-- end card-box -->
            </div> <!-- end col -->

        </div>
        <!-- end row -->

        <div class="row">
            <div class="col-12">
                <div class="text-center mb-3">
                    <a class="btn w-sm btn-light waves-effect" asp-area="admin" asp-controller="user" asp-action="index">Cancel</a>
                    <button type="button" class="btn w-sm btn-success waves-effect waves-light" v-if="!$v.$anyError" v-on:click="save">Save</button>
                </div>
            </div> <!-- end col -->
        </div>
        <!-- end row -->


    </div> <!-- container -->

</div> <!-- content -->

@section Scripts{
    <script src="~/lib/vuelidate/dist/vuelidate.min.js"></script>
    <script src="~/lib/vuelidate/dist/validators.min.js"></script>
    <script src="~/webAppAdmin/user/changePassword.js"></script>
}