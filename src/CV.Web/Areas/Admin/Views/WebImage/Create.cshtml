<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">CMS</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Settings</a></li>
                            <li class="breadcrumb-item active">Add Image</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Hình mới</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->


        <div class="row">
            <div class="col-lg-6">
                <div class="card-box">
                    <h5 class="text-uppercase bg-light p-2 mt-0 mb-3">Thông tin</h5>

                    <div class="form-group mb-3">
                        <label for="name">Đường dẫn</label>
                        <input type="text" id="url" name="url" class="form-control" v-model="objModel.url">
                    </div>
                    <div class="form-group mb-3">
                        <label for="example-select">Vị trí</label>
                        <select class="form-control" id="lang" v-model="objModel.position">
                            <option v-for="position in positions" v-bind:value="position.id">
                                {{position.name}}
                            </option>
                        </select>
                    </div>
                </div> <!-- end card-box -->
            </div> <!-- end col -->

            <div class="col-lg-6">
                <div class="card-box">
                    <h5 class="text-uppercase mt-0 mb-3 bg-light p-2">Hình ảnh</h5>
                    <div class="dropzone" id="uploadFile">

                    </div>
                    <input type="hidden" id="urlImage" value="" />
                </div>
            </div>

        </div>
        <!-- end row -->

        <div class="row">
            <div class="col-12">
                <div class="text-center mb-3">
                    <a class="btn w-sm btn-light waves-effect" asp-area="admin" asp-controller="catalogFunction" asp-action="index">Cancel</a>
                    <button type="button" class="btn w-sm btn-success waves-effect waves-light" v-if="!$v.$anyError" v-on:click="save">Save</button>
                </div>
            </div> <!-- end col -->
        </div>
        <!-- end row -->


    </div> <!-- container -->

</div> <!-- content -->


@section Scripts{
    <script src="~/lib/vuelidate/dist/vuelidate.min.js"></script>
    <script src="~/lib/vuelidate/dist/validators.min.js"></script>
    <script src="~/webAppAdmin/settings/webImage/create.js"></script>
    <script src="~/js/dropzoneUploadfile.js"></script>
}