@{
    ViewData["Title"] = "Catalog Function";
}

<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">CMS</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Settings</a></li>
                            <li class="breadcrumb-item active">Catalog Function</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Hình ảnh</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->


        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-sm-4">
                                <a asp-area="admin" asp-controller="webImage" asp-action="create" class="btn btn-primary waves-effect waves-light" data-overlaycolor="#38414a"><i class="mdi mdi-plus-circle mr-1"></i> Thêm image</a>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-centered table-striped" id="products-datatable">
                                <thead>
                                    <tr>
                                        <th>Hình</th>
                                        <th>Vị trí</th>
                                        <th>URL</th>
                                        <th style="width: 85px;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr v-for="item in list">
                                        <td class="table-user">
                                            <img :src="item.urlImage" alt="table-user" class="mr-2 rounded-circle">
                                        </td>
                                        <td>
                                            {{item.namePosition}}
                                        </td>
                                        <td>
                                            <a :href="'/admin/webImage/update/' + item.id">{{item.url}}</a>
                                        </td>
                                        <td>
                                            <a :href="'/admin/webImage/update/' + item.id " class="action-icon"><i class="mdi mdi-square-edit-outline"></i></a>
                                            <a v-on:click="deleteItem(item.id)" class="action-icon"> <i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    </div> <!-- end card-body-->
                </div> <!-- end card-->
            </div> <!-- end col -->
        </div>
        <!-- end row -->

    </div> <!-- container -->
</div>

@section Scripts{
    <script src="~/webAppAdmin/settings/webImage/list.js"></script>
}